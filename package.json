{
  "name": "node_demo_project",
  "version": "1.0.0",
  "description": "The sample Node.js project with Next.js frontend",
  "scripts": {
    "start": "bun server/src/server.js",
    "server": "bun server/src/server.js",
    "client": "cd client && bun run dev",
    "dev": "concurrently \"bun run server\" \"bun run client\"",
    "build": "cd client && bun run build",
    "install:all": "bun install && cd client && bun install"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "pg": "^8.11.3",
    "tailwind-merge": "^2.6.0"
  }
}
